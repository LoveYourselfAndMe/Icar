<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cheyifu.icar.tabHome.activity.CarAttestationActivity">

    <include
        style="@style/default_layout"
        layout="@layout/base_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/y30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="车牌号码:"
            android:textSize="15sp" />

        <RelativeLayout
            style="@style/ren_zheng1"
            android:background="@drawable/text_bg">

            <TextView
                android:id="@+id/cphm"
                style="@style/ren_zheng"
                android:text="京A123456" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:text="车主姓名:"
            android:textSize="15sp" />

        <RelativeLayout
            style="@style/ren_zheng1"
            android:background="@drawable/text_bg">

            <EditText
                android:id="@+id/cz_name"
                style="@style/ren_zheng"
                android:background="@null"
                android:hint="请输入车主姓名"
                android:singleLine="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:text="车架号码*:"
            android:textSize="15sp" />

        <RelativeLayout
            style="@style/ren_zheng1"
            android:background="@drawable/text_bg">

            <EditText
                android:id="@+id/cjh"
                style="@style/ren_zheng"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入车架号"
                android:digits="._0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:text="发动机号*:"
            android:textSize="15sp" />

        <RelativeLayout
            style="@style/ren_zheng1"
            android:background="@drawable/text_bg">

            <EditText
                android:id="@+id/fdj"
                style="@style/ren_zheng"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入发动机号"
                android:digits="._0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/bg_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/right_away"
            android:textColor="@color/title_bar"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>
