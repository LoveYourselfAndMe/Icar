<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y105">

            <RelativeLayout
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dd_dimen_80px"
                android:layout_height="@dimen/dd_dimen_80px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_24px"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dd_dimen_29px"
                    android:layout_height="@dimen/dd_dimen_29px"
                    android:background="@drawable/back" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_titlebar"
                style="@style/default_layout"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/title_color"
                android:textSize="15.0sp" />


           <RelativeLayout
                   android:id="@+id/title_add"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:gravity="center"
               android:visibility="gone"
                 >
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/add"
                     />
               </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
