<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<com.kevin.loopview.AdLoopView
        android:id="@+id/main_act_adloopview"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>-->
    <!--app:point_layout="center" 指定小圆点位置（center或者right）-->
    <com.kcode.autoscrollviewpager.view.AutoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x400"
        app:point_layout="center">

    </com.kcode.autoscrollviewpager.view.AutoScrollViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cont_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y125"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/addbtn_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/add_car"
                style="@style/home_style"

               >

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/addcar_icon" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_car" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/defy_query"
                style="@style/home_style">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/wei_icon" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/query" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stop_history"
                style="@style/home_style">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/stop_icon" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stop_car" />

            </LinearLayout>

            <LinearLayout android:id="@+id/qr" style="@style/home_style">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/sacn_icon" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qr" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:orientation="vertical"
            android:background="@drawable/contword_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017年02月09日"
                    android:textColor="@color/home_center_text"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x40"
                    android:text="星期四"
                    android:textColor="@color/home_center_text"
                    android:textSize="15sp" />
            <!-- <TextView
                     android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="今日限行 : 2 | 7"
                     android:textSize="20sp"/>-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                    android:background="@drawable/yindao"/>
            </RelativeLayout>


        <!--    <ListView
                android:id="@+id/list"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp">

            </ListView>-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
